main
    margin 15vh 0 15vh 0
    h1
    h2
    h3
        width 100%
        display block
    h1
        font-size 3.0em
        font-weight 700
        margin 25vh 0 0 0
        text-align center
    h2
        font-size 2.0em
        font-weight 700
        margin 0 0 2vh 0
        border-bottom 1px solid
        height 40px
        padding 0 0 10px 0
        box-sizing border-box
    h3
        font-size 1.4em
        margin 10px 0 10px 0
    p
        font-size 0.8em
        max-width 432px
        line-height 1.2em
    a
        color $gray3
        font-size 0.8em
        text-decoration none
        transition color 0.5s ease
        &:hover
            color $color1
.sk-rotating-plane
.sk-spinner
    margin 45vh auto 0 auto
.index
.icono
    display block
    width 8vw
    height auto
    position fixed
    right 1.5vw
    z-index 1
.icono
    bottom 1.5vw
    max-width 50px
.index
    top 1.5vw
    height 103px
    width auto
    @media screen and (max-width: 820px)
        height 33px
article
    min-height 70vh
    box-sizing border-box
    margin 1.5vh 0 1.5vh 0
    overflow hidden
.center
    text-align center
    margin auto
a.center
    display block
    width 100%
    margin 20vh 0 0 0
