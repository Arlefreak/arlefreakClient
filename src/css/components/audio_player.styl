.audio-player
    width 100%
    background transparent
    border 2px solid $black
    display flex
    flex-flow row no-wrap
    align-items center
    justify-content space-between
    padding 10px
    box-sizing border-box
    @media screen and (max-width: $mobile-width)
        flex-flow row wrap
    .button
        text-align center
        padding 5px
        font-size 0.8em
        border none
        color $black
        &:hover
        &.active
            color $highlight-blue
            border-color $highlight-blue
            background $white
    input
        margin 0
        &:last-child
            margin 0
        &:first-child
            margin 0

input[type=range]
    overflow hidden
    padding 0
    margin 0
    width 100%
    height 30px
    outline none
    background transparent
    border none
    box-sizing border-box
    -webkit-appearance none
    -moz-appearance none
    &:focus
        outline none
        border none
        &::-webkit-slider-runnable-track
            background transparent
    &::-webkit-slider-runnable-track
        width 100%
        height 2px
        background transparent
        border none
        border-radius 0
    &::-moz-range-track
        width 100%
        height 2px
        background transparent
        border none
        border-radius 0
    &::-webkit-slider-thumb
        -webkit-appearance none
        -moz-appearance none
        border none
        height 10px
        width 10px
        border-radius 0
        background $black
        transform translate(0,-2px)
    &::-moz-range-thumb
        -moz-appearance none
        border none
        height 10px
        width 10px
        border-radius 0
        background $black
        transform translate(0,2px)
    &:-moz-focusring
        outline none
        outline 1px solid white
        outline-offset -1px

.player-controls
    width 15px
    color $black
    display flex
    flex-flow row wrap
    align-items center
    justify-content space-between
    li
        width 15%

.audio-bar
    width 65%
    display block
    display flex
    flex-flow row no-wrap
    justify-content space-between
    align-items center
    margin 0 2% 0 2%
    @media screen and (max-width: $mobile-width)
        margin 0 0 0 2%
        flex-grow 1
    .audio-bar-lines
        width auto
        flex 1
        position relative

.progress-time
    width auto
    font-family $fontCode
    font-weight bold
    font-size 0.6em

.progressbar
    height 2px
    position absolute
    top 16px
    left 0
    &.total
        width 100%
        background $gray2
    &.loading
        width 0%
        background $black
    &.position
        width 0%
        background $highlight-pink
    &.volume
        width 0%
        background-color $black

.volume-bar-lines
    width auto
    flex 1
    position relative

.volume-controls
    width 18%
    min-width 100px
    color $black
    display flex
    flex-flow row no-wrap
    justify-content flex-end
    align-items center
    @media screen and (max-width: $mobile-width)
        width auto
        flex 1
    input
        width 100%
    .button
        width 25px
