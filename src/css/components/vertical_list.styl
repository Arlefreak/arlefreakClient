ul
    &.vertical-list
        margin 0
        width 50%
        float left
        @media screen and (max-width: $mobile-width)
            display block
            width 100%
            float none
            clear both
        li
            display block
            width 100%
            font-size 1.2em
            white-space nowrap
            overflow hidden
            a
                display block
                width 100%
                padding 5px 0 5px 0
                position relative
                z-index 2
                &::before
                    width 0%
                    height 100%
                    z-index -1
                    background $highlight-soft
                    content ""
                    position absolute
                    bottom 0
                    transition all 0.2s ease
                &:hover
                    color $black
                    &::before
                        width 100%
    &.full-width
        width 100%
        max-width $max-text-width
        float none
