.subscribe
    width 100%
    display flex
    flex-flow row wrap
    align-items flex-start
    justify-content space-between
    margin 20px 0 20px 0
.subscribe-form
    width 49%
    @media screen and (max-width: $mobile-width)
        width 100%
    form
        display flex
        flex-flow column nowrap
        align-items center
        justify-content space-between
        margin 40px 0 20px 0
        margin 0px
        input:first-child 
            margin 0 auto 18px auto
