@keyframes scaleout
    0%
        transform scale(0)
    100%
        transform scale(1)
        opacity 0

.spinner-wrapper
    width 100%
    height 100%
    min-height 70vh
    display flex
    justify-content center
    align-items center

.pulse
.sk-spinner-pulse
    margin 0
    width 50px
    height 50px
    border-radius 40px
    background-color $black
    animation scaleout 1.0s infinite ease-in-out
