section.gallery
    width 100%
    img
        display block
        max-width 100%
        height auto
        margin 2vh auto 0 auto
        border 2px solid $gray5
        box-sizing border-box
        padding 10px
        &:first-child
            margin 40px auto 0 auto
svg
    width 100%
    height 100%
    margin 0px 10px 0 0
