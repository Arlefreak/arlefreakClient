nav
    display block
    width calc(100% + 1px)
    padding 10px 0 10px 0
    background $white
    ul
        display inline-block
        li
            display block
            float left
            margin 0 10px 0 0 
            &:last-child
                margin 0
    a
        color $color1
        padding 0 0 2px 0
        text-decoration none
        border-bottom 1px solid $color2
        transition border-color 0.5s ease
        @media screen and (max-width: 820px)
            font-size 1.0em
        &:hover
            color $color1
            border-bottom 2px solid $color1
        &.active
            color $color1
            border-bottom 2px solid $highlight-pink
