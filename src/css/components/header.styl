header
    width 100%
    height 80px
    padding 10px 0 0 0
    display block
    /* position fixed */
    background $color2
    box-sizing border-box
    top 0
    left 0
    z-index 10
    .title
        overflow hidden
        a
        h1
            display block
            float left
    .logo
        display block
        height 100%
        width auto
        max-height 25px
    h1
        font-size 1.0em
        font-weight 200
        margin 0 20px 0
        color $gray2
        text-align right
        vertical-align top
        padding 5px 0 5px 0
