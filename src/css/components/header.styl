header
    width 100%
    height 80px
    padding 10px 0 0 0
    display block
    /* position fixed */
    background $color2
    box-sizing border-box
    top 0
    left 0
    z-index 10
    img
        display inline-block
        height 12px
        width auto
        @media screen and (max-width: $mobile-width)
            height 10px
    .title
        overflow hidden
        a
        h1
            display block
            float left
    .logo
        display block
        height 100%
        width auto
        height 25px
    h2
        font-size 1.0em
        font-weight 200
        margin 0 20px 0
        color $gray2
        text-align right
        vertical-align top
        padding 5px 0 5px 0
        display inline-block
    nav
        a
            @media screen and (max-width: $mobile-width)
                font-size 0.8em
