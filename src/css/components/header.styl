header
    width 100%
    height 90px
    padding 10px 0 10px 0
    display block
    /* position fixed */
    background $color2
    box-sizing border-box
    top 0
    left 0
    z-index 10
    .logo
        display inline-block
        max-width 100%
        height auto
    h1
        display inline-block
        font-weight 200
        margin 0 20px 0
        color $gray2
        text-align right
        vertical-align top
