.podcast
.episode
    width 100%
    img
        width 100%
        height auto
        display block
    audio
        height auto

.episode-info
.podcast-info
    display flex
    flex-flow row wrap
    justify-content space-between

.episode-info
    align-items flex-end
.podcast-info
    align-items flex-start

.podcast-cover
.episode-cover
    width 30%
    @media screen and (max-width: $mobile-width)
        width 100%

.episode-description
    width 100%

.podcast-column
    width calc(70% - 20px)
    display flex
    flex-flow column
    @media screen and (max-width: $mobile-width)
        margin 20px 0 0 0
        width 100%


.episode-player
    /* width calc(70% - 20px) */
    width 100%
    @media screen and (max-width: $mobile-width)
        margin 20px 0 0 0
        width 100%

.podcast-description
    width 100%

.subscribe-buttons
    width 100%
    max-width 400px
    text-align center
    display flex
    flex-flow row wrap
    align-items center
    justify-content flex-start
    @media screen and (max-width: $mobile-width)
        max-width none
    li
        width 48%
        margin 0 1% 0 0
    a
        box-sizing border-box
        padding 10px
        width 100%
        margin 0
        display block
    .yellow
        border-color $black
        color $black
        text-transform uppercase
        &:hover
            background-color $highlight
            color $black
    .pink
        border-color $highlight-pink
        color $highlight-pink
        text-transform uppercase
        &:hover
            background-color $highlight-pink
            color $black
    .blue
        border-color $highlight-blue
        color $highlight-blue
        text-transform uppercase
        &:hover
            background-color $highlight-blue
            color $black

.episode-buttons
    align-self flex-end
    h3
        margin 0 0 20px 0
    ul.subscribe-buttons
        max-width none
        justify-content space-between
        li
            width auto
            min-width 70px
            flex 1 0 auto
            margin 0 1% 0 0
            &:last-child
                margin 0 0 0 0
        @media screen and (max-width: $mobile-width)
            li
                margin 0 1% 10px 0
                &:last-child
                    margin 0 0 10px 0
