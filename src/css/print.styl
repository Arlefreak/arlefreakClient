@media print
    #footer
    .index
        display none
    #header
        position absolute
        width auto
        height auto
        background transparent
        top 5px
        padding 0
        left initial
        right 0.5%
        h2
        .sticky
        nav
            display none
    html
        body
            margin 0
            .wrapper
                width 100%
            main
                margin 0
                font-size 0.75em
            h1
                font-size 2.5em
            .markdown
                h2
                    font-size 1.2em
                    margin 15px auto 15px 0
                ul
                    margin 0
                    li
                        line-height 1.8em
                        margin 0
                p
                    margin 0 0 0 0
                    line-height 1.5em
                blockquote
                    margin 10px 0 0 0
                    p
                        color $color1


