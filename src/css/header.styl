header
    width 100%
    height 18.8vh
    padding 6.8vh 0 0 0
    display block
    position fixed
    background $color2
    box-sizing border-box
    top 0
    left 0
    z-index 1
    .logo
        display inline-block
        max-width 100%
        height auto
    h1
        display inline-block
        font-size 1.2em
        font-weight 200
        margin 0 20px 0
        padding 5px 0 15px 0
        color $gray2
        text-align right
        vertical-align top
    a
        color $color1
        padding 0 0 5px 0
        text-decoration none
        border-bottom 1px solid $color2
        transition border-color 0.5s ease
        font-size 0.8em
        @media screen and (max-width: 820px)
            font-size 0.6em
        &:hover
        &.active
            border-bottom 1px solid $color1
    nav
        display block
        width 100%
        margin 2% 0 0 0
        ul
            display inline-block
            li
                display inline-block
                margin 0 10px 0 0 
