ul.images
    float right
    width 48%
    overflow hidden
    display flex
    flex-flow row wrap
    align-items center
    justify-content space-between
    @media screen and (max-width: $mobile-width)
        width 100%
        float none
        margin 10px 0 0 0
    &.full-width
        width 100%
        float none
        margin 10px 0 0 0
        li
            width calc(100% / 6 - 2%)
            padding 0 0 calc(100% / 6 - 2%) 0
            @media screen and (max-width: $mobile-width)
                width calc(100% / 4 - 2%)
                padding 0 0 calc(100% / 4 - 2%) 0
    li
        display flex
        height auto
        width calc(100% / 4 - 2%)
        padding 0 0 calc(100% / 4 - 2%) 0
        background-size cover
        background-position center
        background-color $white
        border 1px solid $gray1
        transition border-color 0.5s ease
        overflow hidden
        position relative
        margin 0 0 10px 0
        &:hover
            border 1px solid $gray4
    a
        display block
        width 100%
        height 100%
        img
            position absolute
            top 0
            left 0
            display block
            width 100%
            height 100%
            opacity 100
            transition opacity .5s ease
            &.imgBW:hover
                opacity 0
    li
        img.imgBW
            @media screen and (max-width: $mobile-width)
                opacity 0.8

section.gallery
    width 100%
    img
        display block
        max-width 100%
        height auto
        margin 2vh auto 0 auto
        border 1px solid $gray5
        box-sizing border-box
        padding 10px
        &:first-child
            margin 40px auto 0 auto
svg
    width 100%
    height 100%
    margin 0px 10px 0 0
