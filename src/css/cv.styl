.cv
    img
        display none
    .separation
        display none
        @media print
            height 1px
            display block
            margin 20px
    .pageBreak
        page-break-before always
        @media print
            margin 50px
            display block
            clear both
    h1,h2,h3,h4
        font-weight bolder
        font-weight 700
        margin 10px 0 10px 0
        text-align left
    h1
        font-weight bolder
        font-weight 700
        font-size 1.5em
    h2
        font-weight bolder
        font-weight 700
        font-size 1.2em
        width 85%
        padding 10px 0 0 0
        @media print
            padding 8px 0 0 0
    h3
        font-weight normal
        font-weight 500
        font-size 1.0em
    h4
        font-size 1.0em
        font-weight normal
        font-weight 500
    a
        font-weight lighter
        font-weight 300
        color $color1
        text-decoration none
        display inline-block
        @media print
            padding 0
            border none
    p
        margin 0
    .logo
        width 10%
        height auto
        top 10px
        right 10px
        position absolute
        display block
        @media screen and (max-width: 600px)
            position relative
            margin auto
            width 80%
    ul
        width 95%
        margin 0 auto 0px auto
        font-size 0.8em
        font-weight lighter
        font-weight 300
    li
        max-width 600px
        list-style square
        margin 10px 0 0 0
    p
        color $gray4
        font-size 0.8em
        font-weight lighter
        font-weight 300
        font-style italic
        margin 10px 0 10px 0
        display block
        width 80%
        max-width 600px
    .twoColumn
        text-align center
        &.left
            text-align left
        div
        &>ul
            width 39.5%
            text-align left
            display inline-block
            vertical-align top
            @media screen and (max-width: 600px)
                width 80%
    div
        &.margin
            margin 20px 0px 0px 20px
            clear both
            width 10px
