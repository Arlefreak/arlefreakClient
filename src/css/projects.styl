.projects
.project
    ul
        &.tags
            margin 10px 0 10px 0
            max-width $max-text-width
            width 50%
            @media screen and (max-width: $mobile-width)
                width 100%
                display block
            li
                display inline-block
                margin 0px 4px 0px 0px
                a
                    color $gray3
                    padding 2px 2px 2px 2px
                    box-sizing border-box
                    font-size 0.6em
                    letter-spacing 0.1em
                    &:hover
                        color $color1
                    &.active
                        background $merveilles
                        color $black
        &.links
            margin 0 0 10px 0
            li
                display inline-block
                margin 0 10px 0 0
                width 30px
                height 30px
                img
                    display block
                    width 100%
                    height 100%
    a
        cursor pointer
        font-size 0.8em
    section
        width 100%
        display block
        vertical-align top
    div.half
        display block
        float left
        width 40%
        min-height 10px
.project
    h2
        width 100%
