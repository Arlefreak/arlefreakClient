.projects
    ul
        width 100%
        padding 0
        &.vertical-list
            margin 0
            li
                display block
                width 100%
                margin 5px 0 5px 0
        &.tags
            margin 10px 0 10px 0
            font-size 0.8em
            width 50%
            li
                display inline-block
                margin 0 10px 0 0
                a
                    color $gray2
                    &:hover
                        color $color1
                    &.active
                        color $color3
        &.links
            margin 0 0 10px 0
            font-size 0.8em
            li
                display inline-block
                margin 0 10px 0 0
                width 20px
                height 20px
                img
                    display block
                    width 100%
                    height 100%
        a
            cursor pointer
    section
        width 48%
        display inline-block
        vertical-align top
        &:first-child
            margin 0 3% 0 0
        @media screen and (max-width: 600px)
            width 100%
            display block
        &.gallery
            img
                display block
                max-width 100%
                height auto
                margin 2vh auto 0 auto
                &:first-child
                    margin 40px auto 0 auto
    div.half
        display block
        float left
        width 40%
        min-height 10px
