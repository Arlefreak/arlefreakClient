.projects
    ul
        width 100%
        padding 0
        &.vertical-list
            margin 0
            width 50%
            float left
            @media screen and (max-width: $mobile-width)
                display block
                width 100%
                float none
                clear both
            li
                display block
                width 100%
                margin 0 0 12px 0
                font-size 1.2em
        &.tags
            margin 10px 0 10px 0
            max-width $max-text-width
            width 50%
            @media screen and (max-width: $mobile-width)
                width 100%
                display block
            li
                display inline-block
                margin 0px 4px 0px 0px
                a
                    color $gray3
                    padding 2px 2px 2px 2px
                    box-sizing border-box
                    font-size 0.6em
                    &:hover
                        color $color1
                    &.active
                        background $merveilles
                        color $black
        &.links
            margin 0 0 10px 0
            li
                display inline-block
                margin 0 10px 0 0
                width 20px
                height 20px
                img
                    display block
                    width 100%
                    height 100%
    a
        cursor pointer
        font-size 0.8em
    section
        width 60%
        display block
        float left
        vertical-align top
        &:first-child
            margin 0 5% 0 0
        @media screen and (max-width: $mobile-width)
            width 100%
            display block
            float none
    div.half
        display block
        float left
        width 40%
        min-height 10px
