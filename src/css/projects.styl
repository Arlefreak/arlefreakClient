.projects
    ul
        width 100%
        padding 0
        &.vertical-list
            margin 0
            width 50%
            float left
            @media screen and (max-width: $mobile-width)
                display block
                width 100%
                float none
                clear both
            li
                display block
                width 100%
                margin 5px 0 5px 0
        &.tags
            margin 10px 0 10px 0
            font-size 0.8em
            max-width $max-text-width
            @media screen and (max-width: $mobile-width)
                width 100%
                display block
            li
                display inline-block
                margin 0 10px 0 0
                a
                    color $gray2
                    &:hover
                        color $color1
                    &.active
                        color $merveilles
        &.links
            margin 0 0 10px 0
            font-size 0.8em
            li
                display inline-block
                margin 0 10px 0 0
                width 20px
                height 20px
                img
                    display block
                    width 100%
                    height 100%
        a
            cursor pointer
    section
        width 60%
        display block
        float left
        vertical-align top
        &:first-child
            margin 0 5% 0 0
        &.gallery
            width 35%
            @media screen and (max-width: $mobile-width)
                width 100%
            img
                display block
                max-width 100%
                height auto
                margin 2vh auto 0 auto
                &:first-child
                    margin 40px auto 0 auto
        @media screen and (max-width: $mobile-width)
            width 100%
            display block
            float none
    div.half
        display block
        float left
        width 40%
        min-height 10px
    .images
        display block
        float right
        width 50%
        max-width 350px
        @media screen and (max-width: $mobile-width)
            display block
            width 100%
            float none
            margin 10px 0 0 0
        a
            display block
            float left
            margin 0 2% 2% 0
            width 20%
            height auto
            padding 0 0 20% 0
            background-size cover
            background-position center
            background-color $gray1
            border 1px solid $gray1
            transition border-color 0.5s ease
            &:hover
                border 1px solid $gray4
